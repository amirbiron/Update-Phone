# טלגרם בוט טוקן - קבלו מ @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# מסד נתונים MongoDB
MONGODB_URI=mongodb://localhost:27017/android-update-advisor
# או לחיבור לקלאוד:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/android-update-advisor

# הגדרות סביבה
NODE_ENV=development
PORT=3000

# הגדרות הפרדה בין בוט למשימות מתוזמנות
# משתני סביבה אלו מונעים מהבוט להתחיל כאשר מריצים משימות cron
RUN_TASK_NOW=false
CRON_MODE=false
SCHEDULED_JOB=false

# הפעלת/כיבוי הסקדג'ולר במצב רגיל
ENABLE_SCHEDULER=true

# URL חיצוני של השרת (עבור webhooks)
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com

# Claude API (עבור ניתוח מתקדם)
# לא חובה - הבוט יעבוד גם בלעדיו עם ניתוח בסיסי
CLAUDE_API_KEY=your_claude_api_key_here

# APIs נוספים (אופציונליים)
# Google Custom Search API
GOOGLE_CSE_ID=your_google_cse_id
GOOGLE_API_KEY=your_google_api_key

# Reddit API (עבור חיפוש בפורומים)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# SerpApi או Serper (עבור חיפוש מתקדם)
SERPAPI_KEY=your_serpapi_key

# הגדרות לוגים
LOG_LEVEL=info
LOG_FILE=./logs/bot.log

# הגדרות ביצועים
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30000
CACHE_TTL=3600

# הגדרות אבטחה
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=10

# הגדרות תזמון משימות
ENABLE_SCHEDULER=true
CLEANUP_INTERVAL_DAYS=90

# הגדרות דיבאג
DEBUG_MODE=false
ENABLE_VERBOSE_LOGGING=false

# Webhook settings (עבור production)
WEBHOOK_ENABLED=false
WEBHOOK_SECRET=your_webhook_secret

# משתני סביבה נוספים לפיתוח
DEV_CHAT_ID=your_telegram_chat_id_for_testing
ADMIN_CHAT_IDS=123456789,987654321

# הגדרות גיבוי (אופציונלי)
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# הגדרות התראות (אופציונלי)
ALERTS_ENABLED=false
ALERTS_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
ALERTS_EMAIL=admin@yourdomain.com

# הגדרות analytics (אופציונלי)
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
